{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "movie-browser",
  "version": "0.1.0",
  "identifier": "com.movie-browser.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "movie-browser",
        "width": 920,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src app://*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "publisher": "Luca Lapenna",
    "category": "Utility",
    "shortDescription": "Investment Screener"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "all": true,
      "open": true
    }
  }
}